{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*",
    ]
}
